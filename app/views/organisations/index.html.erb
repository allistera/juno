<h1>Organisations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.name %></td>
        <td><%= organisation.users.count %></td>
        <td><%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' } unless organisation == current_user.organisation %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Organisation', new_organisation_path %>
