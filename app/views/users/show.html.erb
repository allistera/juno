<h1 class="title">Editing User</h1>

<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :email, class: 'label' %>
      <div class="control">
        <%= f.text_field :email, autofocus: true, class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :organisation_id, class: 'label' %>
      <div class="control">
        <div class="select">
          <%= f.collection_select(:organisation_id, Organisation.all, :id, :name) %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <label class="checkbox">
          <%= f.check_box :admin %>
          Administrator
        </label>
      </div>
    </div>

    <div class="control is-grouped">
      <p class="control">
        <%= f.submit "Update", class: 'button is-primary' %>
      </p>
    </div>
<% end %>
