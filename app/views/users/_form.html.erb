<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email, class: 'label' %>
    <div class="control">
      <%= f.text_field :email, autofocus: true, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, class: 'label' %>
    <div class="control">
      <%= f.password_field :password, class: 'input' %>
    </div>
  </div>

    <div class="field">
      <%= f.label 'Confirm Password', class: 'label' %>
      <div class="control">
        <%= f.password_field :password_confirmation, class: 'input' %>
      </div>
    </div>

    <div class="control is-grouped">
      <p class="control">
        <%= f.submit "Next", class: 'button is-primary' %>
      </p>
    </div>
<% end %>
